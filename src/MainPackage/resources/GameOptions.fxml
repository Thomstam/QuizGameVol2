            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Label fx:id="playersError" textFill="RED" translateX="150.0" GridPane.columnIndex="1">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="roundsError" textFill="RED" translateX="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label fx:id="questionsError" textFill="RED" translateX="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
    </children>
</GridPane>
